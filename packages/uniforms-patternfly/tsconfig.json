{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "lib": ["es6", "dom", "es2018.promise", "es2019", "esnext"],
    "target": "es5",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "removeComments": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  }
}
